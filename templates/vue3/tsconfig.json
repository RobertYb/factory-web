{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "vite.config.ts"]
}
